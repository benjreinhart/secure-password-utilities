{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "esm",
    "noImplicitAny": true,
    "sourceMap": true,
    "inlineSources": false,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "secure-password-utilities/crypto": ["src/crypto"],
      "secure-password-utilities/random": ["src/random"]
    },
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
