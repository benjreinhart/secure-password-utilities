{
  "name": "secure-password-utilities",
  "version": "0.0.1-beta.10",
  "description": "Secure, zero-dependency utilities for generating passwords, pins, and more",
  "keywords": [
    "password",
    "pin",
    "secure",
    "symbols",
    "alphanumeric",
    "numeric",
    "uppercase",
    "lowercase",
    "strength",
    "safe",
    "node",
    "browser"
  ],
  "files": [
    "/*.js",
    "/*.js.map",
    "/*.d.ts",
    "esm",
    "src"
  ],
  "browser": {
    "node:crypto": false
  },
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./esm/index.js",
      "default": "./index.js"
    },
    "./crypto": {
      "types": "./crypto.d.ts",
      "import": "./esm/crypto.js",
      "default": "./crypto.js"
    },
    "./random": {
      "types": "./random.d.ts",
      "node": {
        "import": "./esm/random.node.js",
        "require": "./random.node.js"
      },
      "import": "./esm/random.js",
      "require": "./random.js"
    }
  },
  "scripts": {
    "clean": "rm *.{js,d.ts,js.map} esm/*.{js,d.ts,js.map} 2> /dev/null; echo clean",
    "prebuild": "npm run clean",
    "build": "tsc && tsc -p tsconfig.esm.json",
    "lint": "prettier --check 'src/**/*.ts' 'test/**/*.js'",
    "pretest": "npm run build",
    "test": "jest --testMatch \"**/test/**/*.test.js\"",
    "prepublishOnly": "npm run build"
  },
  "author": "Ben Reinhart (https://benreinhart.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/benjreinhart/secure-password-utilities"
  },
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.5.0",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  }
}
