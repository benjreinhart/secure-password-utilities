{
  "name": "secure-password-utilities",
  "version": "0.0.1-beta.3",
  "description": "Zero-dependency utilities for generating secure passwords and pins",
  "keywords": [
    "password",
    "pin",
    "secure",
    "symbols",
    "alphanumeric",
    "numeric",
    "uppercase",
    "lowercase",
    "character",
    "threshold",
    "strength",
    "safe",
    "node",
    "browser"
  ],
  "files": [
    "/*.js",
    "/*.d.ts",
    "/*.js.map",
    "esm",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./esm/index.js",
      "default": "./index.js"
    },
    "./random": {
      "types": "./random.d.ts",
      "node": {
        "import": "./esm/random.node.js",
        "require": "./random.node.js"
      },
      "import": "./esm/random.js",
      "require": "./random.js"
    }
  },
  "scripts": {
    "clean": "rm *.{js,d.ts,js.map} esm/*.{js,js.map} 2> /dev/null;",
    "prebuild": "npm run clean",
    "build": "tsc && tsc -p tsconfig.esm.json",
    "lint": "prettier --check 'src/**/*.ts' 'test/*.ts'",
    "test": "jest --testMatch \"**/test/**/*.test.ts\"",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "author": "Ben Reinhart (https://benreinhart.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/benjreinhart/secure-password-utilities"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
