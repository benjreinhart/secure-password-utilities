{
  "name": "secure-password-utilities",
  "version": "0.0.1-beta.4",
  "description": "Zero-dependency utilities for generating secure passwords and pins",
  "keywords": [
    "password",
    "pin",
    "secure",
    "symbols",
    "alphanumeric",
    "numeric",
    "uppercase",
    "lowercase",
    "character",
    "threshold",
    "strength",
    "safe",
    "node",
    "browser"
  ],
  "files": [
    "lib",
    "src"
  ],
  "browser": {
    "node:crypto": false
  },
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/esm/index.js",
      "default": "./lib/index.js"
    },
    "./random": {
      "types": "./lib/random.d.ts",
      "node": {
        "import": "./lib/esm/random.node.js",
        "require": "./lib/random.node.js"
      },
      "import": "./lib/esm/random.js",
      "require": "./lib/random.js"
    }
  },
  "scripts": {
    "clean": "rm lib/*.{js,d.ts,js.map} lib/esm/*.{js,d.ts,js.map} 2> /dev/null; echo clean",
    "prebuild": "npm run clean",
    "build": "tsc && tsc -p tsconfig.esm.json",
    "lint": "prettier --check 'src/**/*.ts' 'test/*.js'",
    "test": "jest --testMatch \"**/test/**/*.test.js\"",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "author": "Ben Reinhart (https://benreinhart.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/benjreinhart/secure-password-utilities"
  },
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.5.0",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  }
}
